            </ul>
        </nav>
        <nav class="navbar-lite">
            <ul class="navbar-nav">
                <li class="nav-item"><NavLink href="home"><i class="fa-solid fa-house"></i></NavLink></li>
                <li class="nav-item"><NavLink href="pr"><i class="fa-solid fa-circle-info"></i></NavLink></li>
                <li class="nav-item"><NavLink href="product"><i class="fa-solid fa-tags"></i></NavLink></li>
                <li class="nav-item"><NavLink href="cart"><i class="fa-solid fa-cart-shopping"></i></NavLink></li>
                <li class="nav-item"><NavLink href="#"><i class="fa-solid fa-users-gear"></i></NavLink></li>
                <li class="nav-item"><NavLink href="users"><i class="fa-solid fa-user"></i></NavLink></li>
                <li class="nav-item"><NavLink href="#"><i class="fa-solid fa-phone"></i></NavLink></li>
            </ul>
        </nav>
        <article class="main">
            @Body
        </article>
    </div>
    <footer>
        <div class="icon-info">
            <a href=""><i class="fa-brands fa-facebook"></i></a>
            <a href=""><i class="fa-brands fa-youtube"></i></a>
            <a href=""><i class="fa-brands fa-tiktok"></i></a>
