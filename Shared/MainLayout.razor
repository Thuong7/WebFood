@inherits LayoutComponentBase
@inject IJSRuntime JS

<div>
    <div class="header">
        <div class="logo">
            <button type="button" class="menu-toggle" @onclick="ToggleNavbar">
                <i class="fa-solid fa-bars" style="color: #cccccc;"></i>
